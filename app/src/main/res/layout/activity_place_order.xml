<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Place_order"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backArrow"
        android:src="@drawable/back"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="25dp">

        <ImageView
            android:id="@+id/order_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/user"
            />

        <TextView
            android:id="@+id/order_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:maxLines="2"
            android:layout_gravity="center_horizontal"
            android:ellipsize="end"
            android:fontFamily="@font/bebasneue_regular"
            android:textSize="17sp"
            android:text="Here is the title"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Base Price:"
            android:textSize="15sp"
            android:fontFamily="@font/bebasneue_regular"
            android:layout_alignParentLeft="true"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/base_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/bebasneue_regular"
            android:text="000"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discount:"
            android:textSize="15sp"
            android:fontFamily="@font/bebasneue_regular"
            android:layout_alignParentLeft="true"
            android:textColor="@color/black"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:fontFamily="@font/bebasneue_regular"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:text="-"
            />


        <TextView
            android:id="@+id/discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/bebasneue_regular"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:text="000"
            />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discounted Price:"
            android:textSize="15sp"
            android:fontFamily="@font/bebasneue_regular"
            android:layout_alignParentLeft="true"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/discounted_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/bebasneue_regular"
            android:text="000"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery Charge:"
            android:textSize="15sp"
            android:fontFamily="@font/bebasneue_regular"
            android:layout_alignParentLeft="true"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:fontFamily="@font/bebasneue_regular"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:text="+"
            />

        <TextView
            android:id="@+id/delivery_charge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/bebasneue_regular"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:text="000"
            />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/black"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Price:"
            android:textSize="15sp"
            android:fontFamily="@font/bebasneue_regular"
            android:layout_alignParentLeft="true"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/bebasneue_regular"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:text="000"
            />

    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Methods"
        android:layout_gravity="center"
        android:textSize="19sp"
        android:textColor="@color/pinkish"
        android:fontFamily="@font/bebasneue_regular"
        android:layout_marginTop="10dp"/>


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/payment_methods"
        android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="2"
    android:layout_marginTop="20dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/bkash"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:strokeColor="@color/black"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_margin="10dp">

                    <RadioButton
                        android:id="@+id/bkash_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textIsSelectable="true"
                        android:layout_gravity="center"
                        />

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/bkash"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bkash"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/bebasneue_regular"
                    />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>



    <com.google.android.material.card.MaterialCardView
                android:id="@+id/nagad"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:strokeColor="@color/black"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_margin="10dp">

                    <RadioButton
                        android:id="@+id/nagad_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textIsSelectable="true"
                        android:layout_gravity="center"
                        />

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/nagad"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nagad"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/bebasneue_regular"
                    />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

</LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/home_cash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            app:strokeColor="@color/black"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:gravity="center">

                    <RadioButton
                        android:id="@+id/home_cash_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textIsSelectable="true"
                        android:layout_gravity="center"
                        />

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/cash_on_delivery" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cash On Delivery"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/bebasneue_regular"
                    />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </RadioGroup>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/place_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Place Order"
        android:fontFamily="@font/bebasneue_regular"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp"
        android:textSize="18sp"
        />
    </LinearLayout>
</ScrollView>