<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Account_activity"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/shihab"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User_Name"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/oswald_bold"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User_id"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/oswald_bold"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:textColor="#C3000000"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#B2000000"
            android:layout_marginTop="20dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="center_horizontal"
            >


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    >
                    <TextView
                        android:id="@+id/account_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name: "
                        android:fontFamily="@font/oswald_bold"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:id="@+id/account_name_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Md Shihab Hasan"
                        android:fontFamily="@font/oswald_bold"
                        android:textSize="15sp"
                        android:textColor="@color/pinkish"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="10dp"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    >
                    <TextView
                        android:id="@+id/account_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location: "
                        android:fontFamily="@font/oswald_bold"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:id="@+id/account_location_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dhaka, Bangladesh"
                        android:fontFamily="@font/oswald_bold"
                        android:textSize="15sp"
                        android:textColor="@color/pinkish"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="10dp"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    >
                    <TextView
                        android:id="@+id/account_userid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User Id: "
                        android:fontFamily="@font/oswald_bold"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:id="@+id/account_userid_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="shihab2002"
                        android:fontFamily="@font/oswald_bold"
                        android:textSize="15sp"
                        android:textColor="@color/pinkish"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="10dp"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    >
                    <TextView
                        android:id="@+id/account_totalBuy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Buy: "
                        android:fontFamily="@font/oswald_bold"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:id="@+id/account_totalBuy_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20"
                        android:fontFamily="@font/oswald_bold"
                        android:textSize="15sp"
                        android:textColor="@color/pinkish"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="10dp"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    >
                    <TextView
                        android:id="@+id/account_refer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Refer"
                        android:fontFamily="@font/oswald_bold"
                        android:textSize="15sp"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/black"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/refer"
                        />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="10dp"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    >
                    <TextView
                        android:id="@+id/acoount_faq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Frequently ask"
                        android:fontFamily="@font/oswald_bold"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="10dp"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    >
                    <TextView
                        android:id="@+id/account_settings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Settings"
                        android:fontFamily="@font/oswald_bold"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>



        </LinearLayout>



    </LinearLayout>

</LinearLayout>